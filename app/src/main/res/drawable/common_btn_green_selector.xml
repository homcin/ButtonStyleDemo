<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按压时 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding
                android:top="@dimen/offset_12dp"
                android:bottom="@dimen/offset_12dp" />
            <corners android:radius="@dimen/corner_radius_8dp" />
            <stroke
                android:width="@dimen/stroke_width_1dp"
                android:color="@color/stroke_green"/>
            <gradient
                android:angle="-90"
                android:startColor="@color/pressed_green_dark"
                android:endColor="@color/pressed_green_light" />
        </shape>
    </item>
    <!-- 默认时 -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:top="@dimen/offset_12dp"
                android:bottom="@dimen/offset_12dp" />
            <corners android:radius="@dimen/corner_radius_8dp" />
            <stroke
                android:width="@dimen/stroke_width_1dp"
                android:color="@color/stroke_green"/>
            <gradient
                android:angle="-90"
                android:startColor="@color/green_light"
                android:endColor="@color/green_dark" />
        </shape>
    </item>
</selector>