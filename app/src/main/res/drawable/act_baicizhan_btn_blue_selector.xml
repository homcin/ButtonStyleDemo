<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按压时 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/baiCiZhanActivity_btn_fill_blue" />
            <padding
                android:top="@dimen/offset_12dp"
                android:bottom="@dimen/offset_12dp" />
            <corners android:radius="@dimen/corner_radius_6dp" />
            <stroke
                android:width="@dimen/stroke_width_0.5dp"
                android:color="@color/baiCiZhanActivity_btn_border_blue"/>
        </shape>
    </item>
    <!-- 默认时 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/baiCiZhanActivity_btn_fill_blue" />
            <padding
                android:top="@dimen/offset_12dp"
                android:bottom="@dimen/offset_12dp" />
            <corners android:radius="@dimen/corner_radius_6dp" />
            <stroke
                android:width="@dimen/stroke_width_0.5dp"
                android:color="@color/baiCiZhanActivity_btn_border_blue"/>
        </shape>
    </item>
</selector>